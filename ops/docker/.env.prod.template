# DocFoundry Production Environment Variables Template
# Copy this file to .env.prod and fill in the actual values

# Application Version
DOCFOUNDRY_VERSION=latest

# Database Configuration
DATABASE_URL=postgresql://username:password@postgres:5432/docfoundry
REDIS_URL=redis://redis:6379/0

# Search & Vector Database
ELASTICSEARCH_URL=http://elasticsearch:9200
VECTOR_DB_URL=postgresql://username:password@postgres:5432/docfoundry

# Security
SECRET_KEY=your-super-secret-key-here
API_KEY_SALT=your-api-key-salt-here
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=redis://redis:6379/1

# Observability
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# API Performance
API_WORKER_PROCESSES=4
API_MAX_CONNECTIONS=1000

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_PREFETCH=1
WORKER_MAX_TASKS_PER_CHILD=1000

# Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Monitoring
GRAFANA_ADMIN_PASSWORD=secure-grafana-password

# External Services (if using managed services)
# DATABASE_URL=postgresql://user:pass@your-managed-postgres.com:5432/docfoundry
# REDIS_URL=redis://your-managed-redis.com:6379/0
# ELASTICSEARCH_URL=https://your-managed-elasticsearch.com:9200