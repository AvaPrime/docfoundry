# DocFoundry Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
# Use 'sqlite' for development, 'postgresql' for production
DATABASE_TYPE=sqlite

# Legacy database URL (deprecated, use DATABASE_TYPE instead)
DOCFOUNDRY_DB=sqlite:///data/docfoundry.db

# PostgreSQL Configuration (only needed if DATABASE_TYPE=postgresql)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=docfoundry
POSTGRES_USER=docfoundry
POSTGRES_PASSWORD=your_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# Crawler Configuration
DOCFOUNDRY_CRAWL_BUDGET_PAGES=200

# Redis Configuration (for job processing)
REDIS_URL=redis://localhost:6379/0

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=docfoundry
OTEL_RESOURCE_ATTRIBUTES=service.name=docfoundry,service.version=0.2.0
# OTEL_EXPORTER_OTLP_HEADERS=
# ENVIRONMENT=development
# OTEL_EXPORTER_PROMETHEUS_PORT=9090
# OTEL_TRACES_EXPORTER=otlp
# OTEL_METRICS_EXPORTER=prometheus,otlp
# OTEL_LOGS_EXPORTER=otlp

# Logging Configuration
LOG_LEVEL=INFO
